<assembly>
    <id>plugin-assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
    	<file>
            <source>target/agent/hub-teamcity-agent-${project.version}.zip</source>
            <outputDirectory>agent</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../teamcity-plugin.xml</source>
            <filtered>true</filtered>
        </file>
    </files>
    <moduleSets>
    <moduleSet>
       <useAllReactorProjects>true</useAllReactorProjects>
       <includes>
           <include>com.blackducksoftware.integration:hub-teamcity-server</include>
           <include>com.blackducksoftware.integration:hub-teamcity-common</include>
       </includes> 
       <binaries>
           <outputDirectory>server</outputDirectory>
           <unpack>false</unpack>
           <dependencySets>
               <dependencySet>
                    <includes>
                         <include>*</include>
                    </includes>
               </dependencySet>
           </dependencySets>
       </binaries>
    </moduleSet>
  </moduleSets>
</assembly>